{% block vat_form_body %}
    <div class="flex items-center justify-center" style="min-height: calc(100vh - 4rem);">
      <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">VAT ID</h2>
        <form method="post">
          <div class="mb-4 flex space-x-2">
            <div class="w-1/4">
              <label for="country-code" class="block text-sm font-medium text-gray-700">ISO</label>
              <select
                id="country-code"
                name="country-code"
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option value="AT">AT</option>
                <option value="BE">BE</option>
                <option value="BG">BG</option>
                <option value="HR">HR</option>
                <option value="CY">CY</option>
                <option value="CZ">CZ</option>
                <option value="DK">DK</option>
                <option value="EE">EE</option>
                <option value="FI">FI</option>
                <option value="FR">FR</option>
                <option value="DE">DE</option>
                <option value="GR">GR</option>
                <option value="HU">HU</option>
                <option value="IE">IE</option>
                <option value="IT">IT</option>
                <option value="LV">LV</option>
                <option value="LT">LT</option>
                <option value="LU">LU</option>
                <option value="MT">MT</option>
                <option value="NL">NL</option>
                <option value="PL">PL</option>
                <option value="PT">PT</option>
                <option value="RO">RO</option>
                <option value="SK">SK</option>
                <option value="SI">SI</option>
                <option value="ES">ES</option>
                <option value="SE">SE</option>
              </select>
            </div>
            <div class="w-3/4">
              <label for="vat-id" class="block text-sm font-medium text-gray-700">VAT ID</label>
              <input
                type="hidden"
                name="token"
                value="{{ csrf_token('vat-id') }}"
              />
              <input
                type="text"
                id="vat-id"
                name="vat-id"
                placeholder="123456789"
                title="Please enter only the numeric part of the VAT ID"
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                required
              />
            </div>
          </div>
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            Validate
          </button>
        </form>
        {% block vat_form_result %}
          <div class="mt-4">
            {% if message is defined %}
              <!-- Error Message Box -->
              <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline">{{ message }}</span>
              </div>
            {% elseif addressParts is defined %}
              <!-- Success Box -->
              <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative">
                <strong class="font-bold">Success!</strong>
                <div class="mt-2">
                  <div class="grid grid-cols-2 gap-2">
                    {% for title, addressPart in addressParts %}
                      <div class="font-semibold text-gray-700">{{ title }}:</div>
                      <div class="text-gray-900">{{ addressPart }}</div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        {% endblock %}
      </div>
    </div>
{% endblock %}
 